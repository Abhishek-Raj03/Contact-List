<html>
    <head>
     <title>
        <%= title %>
     </title>
     <script src="https://kit.fontawesome.com/c4c560e784.js" crossorigin="anonymous"></script>
     <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
      
       <h1>
         <i class="fa-solid fa-address-book"></i>
         My Contacts List
      </h1>

       <div>
        <ul>
           <% for(let i of contact_list){ %>
            <li class="contact" >
            <div class="details">     
                     <div id="name" style="font-size: medium;">
                    <%= i.name %>
                     </div>
                  <div id="phone">
                    <%= i.phone %>
                  </div>
                  
               </div>
               <div class="delete-button">
                  <!-- <a href="/delete-contact/<%=i.phone%>"> -->
                  <!-- <a href="/delete-contact/?phone=<%=i.phone%>" > -->
                     <a href="/delete-contact/?ide=<%=i._id%>" >

                     <!-- <i class="fa-solid fa-circle-trash"></i> -->
                     <i class="fa-solid fa-trash"></i>
                  </a>
               </div>
            </li>
          <% } %>
        </ul>
      </div>

       <form id="contact-form" action="/create-contact" method="post">
        <input type="text" name="name" placeholder="Enter name" required>
        <input type="number" name="phone" placeholder="Enter phone no." required>
        <button type="submit">Add to contact</button>
       </form>
       <script src="/js/home.js"></script>
        
    </body>
</html>